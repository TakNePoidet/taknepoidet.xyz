{
	"name": "taknepoidet-nuxt-starter",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"prepare": "husky install",
		"prettier": "prettier --write .",
		"stylelint": "stylelint --fix \"./**/*.{scss,css,sass,vue}\"",
		"eslint": "eslint --fix .",
		"beautifier": "npm run stylelint && npm run eslint && npm run prettier"
	},
	"devDependencies": {
		"@nuxtjs/eslint-config-typescript": "^12.0.0",
		"@taknepoidet-config/eslint-config": "^1.16.0",
		"@taknepoidet-config/prettier": "^1.16.0",
		"@taknepoidet-config/stylelint": "^1.16.0",
		"eslint": "^8.40.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nuxt": "^3.4.3",
		"prettier": "^2.8.8",
		"pretty-quick": "^3.1.3",
		"sass": "^1.62.1",
		"stylelint": "^15.6.1"
	},
	"lint-staged": {
		"**/*.(scss|css|sass|vue)": [
			"stylelint --fix",
			"git add"
		],
		"**/*.(js|ts|vue)": [
			"eslint --fix",
			"git add"
		],
		"**/*.*": [
			"pretty-quick",
			"git add"
		]
	},
	"dependencies": {
		"taknepoidet-scss-starter": "^1.0.0"
	}
}
