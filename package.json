		"deploy": "npm run generate && gh-pages -d \"./dist\""
	},
	"devDependencies": {
		"@nuxt/devtools": "^1.0.8",
		"@nuxt/image": "^1.2.0",
		"@nuxtjs/color-mode": "^3.3.2",
		"@poidet/editorconfig": "^0.6.0",
		"@poidet/eslint-config-nuxt": "^0.6.1",
		"@poidet/prettier": "^0.6.0",
		"@poidet/stylelint": "^0.6.2",
		"@types/canvas-confetti": "^1.6.4",
		"@vueuse/nuxt": "^10.7.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"gh-pages": "^6.1.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"nuxt": "^3.9.1",
		"nuxt-simple-robots": "^4.0.0-rc.11",
		"nuxt-simple-sitemap": "4.4.1",
		"nuxt-yandex-metrika": "^1.2.3",
		"postcss-preset-env": "^9.3.0",
		"prettier": "^3.2.2",
