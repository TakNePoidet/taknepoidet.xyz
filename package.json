{
	"private": true,
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_ENV=production nuxt build",
		"dev": "nuxt dev",
		"generate": "cross-env NODE_ENV=production nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"prepare": "husky install",
		"prettier": "prettier --write .",
		"stylelint": "stylelint --fix \"./**/*.{scss,css,sass,vue}\"",
		"eslint": "eslint --fix .",
		"beautifier": "npm run stylelint && npm run eslint && npm run prettier",
		"deploy": "npm run generate && gh-pages -d \"./dist\""
	},
	"devDependencies": {
		"@nuxt/devtools": "^0.8.5",
		"@nuxt/image": "^1.0.0-rc.1",
		"@nuxtjs/color-mode": "^3.3.0",
		"@poidet/editorconfig": "^0.3.0",
		"@poidet/eslint-config-nuxt": "^0.3.0",
		"@poidet/prettier": "^0.3.0",
		"@taknepoidet-config/stylelint": "^2.1.1",
		"@types/canvas-confetti": "^1.6.1",
		"@vueuse/nuxt": "^10.4.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.50.0",
		"gh-pages": "^6.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"nuxt": "^3.7.1",
		"nuxt-simple-robots": "^3.1.2",
		"nuxt-simple-sitemap": "3.2.6",
		"nuxt-yandex-metrika": "^1.2.0",
		"postcss-preset-env": "^9.1.3",
		"prettier": "^3.0.3",
		"sass": "^1.67.0",
		"stylelint": "^15.10.3"
	},
	"lint-staged": {
		"**/*.(scss|css|sass|vue)": [
			"stylelint --fix",
			"git add"
		],
		"**/*.(js|ts|vue)": [
			"eslint --fix",
			"git add"
		],
		"**/*.*": [
			"prettier -u",
			"git add"
		]
	},
	"dependencies": {
		"@nuxt/content": "^2.8.5",
		"@nuxtjs/google-fonts": "^3.0.2",
		"@pinia/nuxt": "^0.4.11",
